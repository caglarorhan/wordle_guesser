{
  "name": "wordle_guesser",
  "short_name": "Wordle Turkish Guesser",
  "description": "Guessing the word extension for Wordle Turkish",
  "homepage_url": "https://www.linkedin.com/in/caglarorhan/",
  "version": "2022.0.3",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "WORDLE TURKISH GUESSER",
    "default_icon": "./guesser_16.png"
  },
  "icons": {
    "16": "./guesser_16.png",
    "128": "./guesser_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bundle.app/wordle-tr/"
      ],
      "js": [
        "./js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "./js/content.js"
  ],
  "permissions": ["activeTab", "storage"]
}
